<%= semantic_nested_form_for [:admin, @work], :html => {:multipart => true} do |f| %>
  <%= f.inputs do %>
    <%= f.input :title, :label => false, :input_html => {:placeholder => "Title"} %>
    <%= f.input :subtext, :label => false, :input_html => { :placeholder => "Snippet", :rows => 2, :class => "wysiwyg" } %>
    <%= f.input :fulltext, :label => false, :input_html => { :placeholder => "Body...", :class => "wysiwyg" } %>
    <%= f.input :project_scope, :label => false, :input_html => { :placeholder => "Body...", :class => "wysiwyg" } %>
    <%= f.input :credits, :label => false, :input_html => { :placeholder => "Body...", :class => "wysiwyg" } %>
    <%= f.input :season, :label => false, :input_html => { :placeholder => "Body...", :class => "wysiwyg" } %>
    <%= f.input :selected %>
  <% end %>
  <%= f.inputs "Featured Image" do %>
    <%= f.input :featured_image, :label => false, :as => :file, :hint => f.template.image_tag(f.object.featured_image.thumb.url) %>
    <%= f.hidden_field :featured_image_cache %>
  <% end %>
  <%= f.inputs "Logo" do %>
    <%= f.input :logo, :label => false, :as => :file, :hint => f.template.image_tag(f.object.logo.thumb.url) %>
    <%= f.hidden_field :logo_cache %>
  <% end %>
  <%= f.inputs "Image Gallery" do %>
    <%= f.fields_for :work_images do |b| %>
      <%= b.input :image, :as => :file, :label => false %>
      <% unless b.object.image.url.blank? %>
        <%= b.template.image_tag(b.object.image.thumb.url) %>
        <%= b.link_to_remove "Remove image" %>
      <% end %>
    <% end %>
    <%= f.link_to_add "Add an image", :work_images %>
  <% end %>
  <%= f.actions %>
<% end %>
