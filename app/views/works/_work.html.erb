<%= link_to image_tag("home/close.jpg"), "javascript:void(0)", :class => "close" %>
<div class="divider"></div>

<div id="info">
  <div id="text">
    <h1><%= work.title %></h1>
    <span class="subtext">
      <%= work.subtext %>
    </span>
    <span class="date">
      <%= work.season %>
    </span> 
      <div id="miniDiv"></div>
    <div id="content">
      <%= work.fulltext %>
    </div>
  </div>
  <div id="scope">
    <span class="tags">  
      <%= work.project_scope %>
    </span>
    <br />
    <br />
    <br />
    <span class="creator">  
      <%= work.credits %>
    </span>
  </div>    
  <br />
  <br />
  <div id="link">
    <%= link_to "view the #{work.title} lookbook", work.lookbook.url %>
  </div> 
 
  <div class="spacer"></div>
</div>

<div id="carousel2">
  <% work.work_images.each do |work_image| %>
    <%= image_tag work_image.image.url %>
  <% end %>
</div>  
 
<div class="tagImage">
  <%= image_tag work.logo.url %>
</div>  
