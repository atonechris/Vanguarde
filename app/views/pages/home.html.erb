<div id="worksExpand">
</div><!-- worksExpanded -->

	<div id="titleNews">
		In The News
	</div>
	
	<div class="spacer"></div>


	<div id="newsContainer">
    <% @posts.each do |post| %>

      <div id="newsItem">
        <div class="title">
          <p>
            <%= post.title %>
            <br />
            <span class="date">
              <%= post.created_at.getlocal.strftime("%b %e, %Y") %>
            </span>
          </p>	
        </div>
        <%= image_tag post.image %>	
        <br />
        <div class="caption">			
          <%= post.snippet %>
        </div>		
      </div>

    <% end %>
  </div><!-- /newsContainer -->

