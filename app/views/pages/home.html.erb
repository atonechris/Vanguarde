	<div id="titleWork">
		VANGUARDE WORKS
	</div>
	<div id="subTitle">
		Select Edits
	</div>

	<div id="worksContainer">
    <% @works.each do |work| %>
      <div id="worksPhoto">
        <%= image_tag work.featured_image.url %>
        <div id="worksPhototitle">
          <%= work.title %>
        </div>
        <div id="worksPhotoSubtitle">
          <%= work.subtext %>
        </div>
        <div id="worksSeason">
          <%= work.season %>
        </div>		
      </div><!-- worksPhoto -->
    <% end %>
	</div><!-- worksContainer -->

  <% @works.each do |work| %>
    <div id="worksExpand">
      <%= image_tag "home/close.jpg", :class => "close" %>
      <div class="divider"></div>

      <div id="info">
        <div id="text">
          <h1><%= work.title %></h1>
          <span class="subtext">
            <%= work.subtext %>
          </span>
          <span class="date">
            <%= work.season %>
          </span> 
            <div id="miniDiv"></div>
          <div id="content">
            <%= work.fulltext %>
          </div>
        </div>
        <div id="scope">
            <span class="tags">  
              <%= work.project_scope %>
            </span>
            <br />
            <br />
            <br />
            <span class="creator">  
              <%= work.credits %>
            </span>
        </div>    
        <br />
        <br />
        <div id="link">
          <a href="#">view the nycked resort 2012 lookbook</a>
        </div> 
       
        <div class="spacer"></div>
      </div>

      <div id="slides2">
        <div class="slides_container">
          <div class="slide">
            <%= image_tag "temp/largeProject.jpg", :class => "large" %>
          </div>
          <div class="slide">
            <%= image_tag "temp/largeProject.jpg", :class => "large" %>
          </div>
          <div class="slide">
            <%= image_tag "temp/largeProject.jpg", :class => "large" %>
          </div>
        </div>
      </div>  
       
      <div class="tagImage">
        <%= image_tag work.logo.url %>
      </div>  
    </div><!-- /worksExpanded -->
  <% end %>

	<div id="titleNews">
		In The News
	</div>
	
	<div class="spacer"></div>


	<div id="newsContainer">
    <% @posts.each do |post| %>

      <div id="newsItem">
        <div class="title">
          <p>
            <%= post.title %>
            <br />
            <span class="date">
              <%= post.created_at.getlocal.strftime("%b %e, %Y") %>
            </span>
          </p>	
        </div>
        <%= image_tag post.image %>	
        <br />
        <div class="caption">			
          <%= post.snippet %>
        </div>		
      </div>

    <% end %>
  </div><!-- /newsContainer -->

