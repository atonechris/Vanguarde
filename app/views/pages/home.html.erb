	<div id="titleWork">
		VANGUARDE WORKS
	</div>
	<div id="subTitle">
		Select Edits
	</div>

	<div id="worksContainer">
    <% @works.each do |work| %>
      <div id="worksPhoto">
        <%= image_tag work.featured_image.url %>
        <div id="worksPhototitle">
          <%= link_to work.title, "/works/#{work.id}.js", :remote => true %>
        </div>
        <div id="worksPhotoSubtitle">
          <%= work.subtext %>
        </div>
        <div id="worksSeason">
          <%= work.season %>
        </div>		
      </div><!-- worksPhoto -->
    <% end %>
